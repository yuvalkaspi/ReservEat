<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_custom_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:orientation="vertical"
    android:background="@color/cardview_light_background">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        >

        <TextView
            android:id="@+id/reservation_form_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="5dp"
            android:text="@string/reservation"
            android:textColor="@color/colorHeadline"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/ib_close"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/close"
            android:layout_marginLeft="35dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:layout_width="@dimen/pop_up_icon_size"
            android:layout_height="@dimen/pop_up_icon_size"
            android:src="@mipmap/restaurant"
            android:layout_gravity="center"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/pop_up_padding"
            android:text="Restuarnt:"
            android:textSize="@dimen/pop_up_text_size"
            android:textColor="@color/pop_up_text_color"/>

        <TextView
            android:id="@+id/popup_resturant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/pop_up_padding"
            android:text="restuarnt"
            android:textSize="@dimen/pop_up_text_size"
            android:textColor="@color/pop_up_text_color"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:layout_width="@dimen/pop_up_icon_size"
            android:layout_height="@dimen/pop_up_icon_size"
            android:src="@mipmap/cafe"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/pop_up_padding"
            android:text="Branch:     "
            android:textSize="@dimen/pop_up_text_size"
            android:textColor="@color/pop_up_text_color"/>

        <TextView
            android:id="@+id/popup_branch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/pop_up_padding"
            android:text="branch"
            android:textSize="@dimen/pop_up_text_size"
            android:textColor="@color/pop_up_text_color"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:layout_width="@dimen/pop_up_icon_size"
            android:layout_height="@dimen/pop_up_icon_size"
            android:src="@mipmap/calendar"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/pop_up_padding"
            android:text="Date:          "
            android:textSize="@dimen/pop_up_text_size"
            android:textColor="@color/pop_up_text_color"/>

        <TextView
            android:id="@+id/popup_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/pop_up_padding"
            android:text="date"
            android:textSize="@dimen/pop_up_text_size"
            android:textColor="@color/pop_up_text_color"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:layout_width="@dimen/pop_up_icon_size"
            android:layout_height="@dimen/pop_up_icon_size"
            android:src="@mipmap/clock_icon"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/pop_up_padding"
            android:text="Hour:          "
            android:textSize="@dimen/pop_up_text_size"
            android:textColor="@color/pop_up_text_color"/>

        <TextView
            android:id="@+id/popup_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/pop_up_padding"
            android:text="hour"
            android:textSize="@dimen/pop_up_text_size"
            android:textColor="@color/pop_up_text_color"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:layout_width="@dimen/pop_up_icon_size"
            android:layout_height="@dimen/pop_up_icon_size"
            android:src="@mipmap/man_icon"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/pop_up_padding"
            android:text="People:      "
            android:textSize="@dimen/pop_up_text_size"
            android:textColor="@color/pop_up_text_color"/>

        <TextView
            android:id="@+id/popup_num_of_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/pop_up_padding"
            android:text="num"
            android:textSize="@dimen/pop_up_text_size"
            android:textColor="@color/pop_up_text_color"/>

    </LinearLayout>

    <Button
        android:id="@+id/pick_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pick"
        android:textSize="@dimen/pop_up_text_size"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimary"
        android:layout_marginLeft="@dimen/fab_margin" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/popup_name_form"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/pop_up_padding"
            android:text="name"
            android:textSize="@dimen/pop_up_text_size"
            android:textColor="@color/pop_up_text_color"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/popup_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/pop_up_padding"
            android:text="name"
            android:textSize="@dimen/pop_up_text_size"
            android:textColor="@color/pop_up_text_color"
            android:visibility="gone"/>

    </LinearLayout>

    <TextView
        android:id="@+id/popup_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12sp"
        android:text="name"
        android:textSize="12sp"
        android:textColor="@color/pop_up_text_color"
        android:visibility="gone"/>



        <Button
            android:id="@+id/spam_Button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/exclamation"
            android:gravity="left|center_vertical"
            android:text=" spam"
            android:textSize="@dimen/pop_up_text_size"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="@dimen/fab_margin"
            android:visibility="visible"
            android:background="@color/cardview_light_background"
            />



</LinearLayout>

